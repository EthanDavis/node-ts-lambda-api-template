{
  "name": "lambda-api-template",
  "version": "1.0.0",
  "description": "Template used to create restful services using AWS API Gateway and AWS Lambda",
  "main": "./handler.js",
  "scripts": {
    "start": "serverless offline start",
    "test": "mocha",
    "lint": "tslint -c tslint.json './src/**/*.{ts,tsc}'",
    "build": "tsc && cp package.json ./build/package.json && cd build && npm i --production && zip -r ../template.zip ."
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "recursive": true,
    "extension": [
      "ts",
      "js",
      "tsx"
    ]
  },
  "dependencies": {
    "aws-lambda": "^1.0.6",
    "aws-lambda-router": "^0.10.0",
    "axios": "^0.21.1",
    "source-map-support": "^0.5.19",
    "tslint": "^5.16.0"
  },
  "devDependencies": {
    "@serverless/typescript": "^2.23.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.1",
    "@types/sinon": "^10.0.1",
    "chai": "^4.3.4",
    "json-schema-to-ts": "^1.5.0",
    "mocha": "^8.4.0",
    "serverless": "^2.23.0",
    "serverless-offline": "^7.0.0",
    "serverless-webpack": "^5.3.5",
    "sinon": "^11.1.1",
    "ts-loader": "^8.0.15",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.20.2",
    "webpack-cli": "^4.7.0",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "Envase Technologies",
  "license": "MIT"
}
